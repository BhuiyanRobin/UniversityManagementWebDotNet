@model IEnumerable<UniversityManagementWebDotNet.Models.DAO.Message>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_FacultyLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AOperator.Catagory)
        </th>
        <th>
            Sender User Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Messages)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AOperator.Catagory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SenderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Messages)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
