<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -East West University</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <button type="button" onclick="location.href='@Url.Action("Index", "Home")'">
                    <img alt="New" title="Community Medicine" src="~/Image/ewuWeb.gif" style="height: 50px;width: 100px;">
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Student", "Create", "Student")</li>
                    <li>@Html.ActionLink("Take Course", "Create", "TakeCourse")</li>
                    <li>@Html.ActionLink("Course", "Create", "Course")</li>
                    <li>@Html.ActionLink("Course Assign", "Create", "CourseAssign")</li>
                    <li>@Html.ActionLink("Faculty", "Create", "Faculty")</li>
                    <li>@Html.ActionLink("Room", "Create", "Room")</li>
                    <li>@Html.ActionLink("Semister", "Create", "Semister")</li>
                    <li>@Html.ActionLink("Time Slot", "Create", "TimeSlot")</li>
                    <li>@Html.ActionLink("LogOut", "LogOut", "LogIn")</li>
                    <li>@Html.ActionLink("Message","Index","Message")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <td class="col-md-1" style="background: darkslategray; color: white">
                            <h5>Connect with EWU</h5>
                        </td>
                        <td style="background-color: antiquewhite">
                            <h4 style="font-family: cursive"><strong>Subscribe to the East West University</strong></h4>
                            <h6 style="font-family: sans-serif"><strong>EWU's Official Newsletter</strong></h6>

                            <input type="text" class="input-group form-control" placeholder="Enter Your Email Address" />
                            <button style="background-color: gray">Subscribe</button>

                        </td>
                        <td class="col-md-4" style="background-color: aqua">
                            <div class="col-md-2" style="margin-right: 100px;">
                                <div class="form-inline"></div>
                                <a href="https://www.facebook.com/EWUcampus?fref=ts">FACEBOOK</a>
                                <a href="https://www.linkedin.com/">LINKEDIN</a><br />
                                <a href="https://twitter.com">TWITTER</a><br />
                                <a href="https://www.rss.com/">RSS</a><br />
                            </div>
                            <div class="col-md-2" style="margin-left: 50px;">
                                <a href="https://www.youtube.com/">YOUTUBE</a><br />
                                <a href="https://instagram.com">INSTAGRAM</a><br />
                                <a href="https://www.apple.com/itunes">ITUNES</a><br />
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
            <div style="height: 5px;"><p>&copy; @DateTime.Now.Year -East west University</p></div>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
